<style>
  .main-content {
    max-width: 1450px;
    margin: 60px auto 0;
    padding-left: 0;
    position:relative;
  }  
  .main-content .shopify-section{
    width:calc(100% - 220px);
    margin-left:auto;
  }
  .main-content .shopify-section:first-child{
    width:200px;
    margin:0;
  }
  .faq-menu {
      float: left;
      width: 220px;
  }
    
  .faq-menu ul {
    display: block;
    list-style: none;
    margin: 0;
  }
  .faq-menu ul li, .faq-menu ul a {
    display: block;
    font-size: 16px;
    letter-spacing: 1px;
    font-weight: 300;
    text-transform: uppercase;
    margin: 0;
    line-height: 19px;
    display:flex;
    justify-content:space-between;
    align-items:center;
    width:100%;
  }
  .faq-menu ul a span{
    display:inline-block;
  }  
  
  .faq-menu ul a.active-menu-item span,
  .faq-menu ul a:hover span{
    color:#f03a7c;
  }  
  
  .faq-menu ul li {
    padding:15px 0;
    border-top:1px solid #ccc;
    position:relative;
  }  
  .faq-menu ul li:first-child {
    border-top:1px solid #000;
  }  
  .faq-menu ul li a:after {
    content:"";
    display:inline-block;
    width: 0; 
    height: 0; 
    border-top: 6px solid transparent;
    border-bottom: 6px solid transparent;
    border-left: 12px solid #000;
    margin-left:15px;
    pointer-events:none;
  }
  .faq-menu ul li:hover a.active-menu-item:after,
  .faq-menu ul li:hover a:after {
    border-left: 12px solid #f03a7c;
  }  
  .main-content {
      padding-left: 0px;
  }
  [id ^= "FAQ-content-faq"] p{
    padding-left:50px;
  }
  button[ aria-controls^= "FAQ-content-faq"] span.collapsible-trigger__icon--circle svg{
    opacity:0;
    position:fixed;
  }
  button[ aria-controls^= "FAQ-content-faq"][ aria-expanded^= "true"] span.collapsible-trigger__icon--circle:after{
    content:"-";
  }
  button[ aria-controls^= "FAQ-content-faq"][ aria-expanded^= "false"] span.collapsible-trigger__icon--circle:after{
    content:"+";
  }
  button[ aria-controls^= "FAQ-content-faq"] span.collapsible-trigger__icon--circle {
    border: 1px solid;
    border-color: #000;
    border-radius: 36px;
    height: 36px;
    text-align: center;
    width: 36px;
    font-size:22px;
  }
  button[ aria-controls^= "FAQ-content-faq"] span.collapsible-trigger__icon--circle ~ span {
    padding-left: 10px;
    font-size: 20px;
  }
  div[data-block="faq"] {
      border-bottom: 1px solid #ccc;
      padding: 10px 0;
  }
  .index-section--faq{
    margin: 60px 0 0 0;
  }
  div[data-index="1"] .index-section--faq {
    margin: 0;
  }
  .rte.collapsible-content__inner--faq {
    padding-bottom: 10px;
  }
  @media screen and (max-width:768px){
    .faq-menu h2{
      padding-top:20px
    }
    .main-content{
      margin-top:0;
    }
    .main-content .shopify-section{
      width:100%;
      margin-left:auto;
    }
    .main-content .shopify-section:first-child{
      width:100%;
      margin:0;
    }  
    .faq-menu {
        float: none;
        width: 100%;
        padding-left:20px;
      padding-right:20px;
    }
  }
</style>
<div class="faq-menu">
  <h2>FAQs</h2>
  <ul>
    {% for link in linklists.faq-menu.links %}
      <li{% if page.url == link.url %} class="active-menu-item"{% endif %}><a href="{{ link.url }}"><span>{{ link.title }}</span></a></li>
    {% endfor %}    
  </ul>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section"
}
{% endschema %}